@model RDV.Domain.Entities.Partner
@using RDV.Web.Models.UI
@{
    ViewBag.Title = Model.Id <= 0 ? "Создание партнера" : "Редактирование партнера " + Model.Name;
}
<script src="/Content/ckeditor/ckeditor.js" type="text/javascript"></script>
<div id="page">
    <div class="page-header">
        <div class="page-title">
            @ViewBag.Title
        </div>
        @Html.Partial("NavigationChain")
    </div>
    <div class="page-content">
        <div class="page-administration-content">
            @* Разделы панели управления *@
            @Html.Partial("AdministrationTabs", new TabOptionsModel() { SelectedTab = "Content-tab" })
            @* Контейнер лейаута страницы *@
            <table class="action-table">
                <tbody>
                    <tr>
                        <td width="200px">
                            @* Меню действий *@
                            <div id="action-menu" style="width: 200px" cellspacing="0">
                                <div id="action-menu-header">
                                    Разделы
                                </div>
                                <ul id="action-menu-content">
                                    <li><a href="/administration/content/menu">Меню</a> </li>
                                    <li><a href="/administration/content/news">Публикации</a> </li>
                                    <li><a href="/administration/content/banners">Баннера</a> </li>
                                    <li><a href="/administration/content/books">Книги</a> </li>
                                </ul>
                            </div>
                        </td>
                        <td width="100%">
                            @* Форма редактирования таблицы *@
                            <div class="page-form-container">
                                <form action="/administration/content/save-partner" method="POST" id="edit-partner-form" enctype="multipart/form-data">
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <div class="editor-label">
                                        Заголовок
                                    </div>
                                    <div class="editor-field">
                                        <input type="text" class="round field" id="page-title-field" maxlength="255" name="Name" value="@Model.Name" placeholder="Введите название партнера"/>
                                    </div>
                                    <div class="editor-label">
                                        Url сайта
                                    </div>
                                    <div class="editor-field">
                                        <input type="text" class="round field" id="page-publisher-field" maxlength="255" name="Url" value="@Model.Url" placeholder="Введите адрес сайта партнера"/>
                                    </div>
                                    <div class="editor-label">
                                        Позиция в списке
                                    </div>
                                    <div class="editor-field">
                                        <input type="text" class="round field" id="page-position-field" maxlength="255" name="Position" value="@Model.Position" placeholder="Введите порядковый номер партнера"/>
                                    </div>
                                    <div class="editor-label">
                                        Неактивное изображение
                                    </div>
                                    <div class="editor-field">
                                        <input type="file" name="InactiveImage"/>
                                    </div>
                                    <div class="editor-label">
                                        Активное изображение
                                    </div>
                                    <div class="editor-field">
                                        <input type="file" name="ActiveImage"/>
                                    </div>
                                    <div id="submit-button-wrapper" onclick="$('#edit-partner-form').submit();">
                                        <span id="submit-button"></span>
                                    </div>
                                </form>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="clear">
            </div>
        </div>
    </div>
</div>
<script language="javascript" type="text/javascript">
    validators.bindEditPartnerFormValidators();
</script>
